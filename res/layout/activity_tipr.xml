<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >
    
	<TextView
        android:id="@+id/bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bill"
        android:layout_alignParentTop="true"
        android:textSize="50dp"/>
	
	<EditText 
	    android:id="@+id/billBox"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/bill_hint"
	    android:layout_toRightOf="@id/bill"
	    android:textSize="35dp"
	    android:inputType="numberDecimal"/>
	
	<TextView
	    android:id="@+id/labelPercent"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/initial_tip"
	    android:layout_below="@id/bill"
	    android:textSize="50dp"
	    android:layout_centerHorizontal="true"/>
	<SeekBar
	    android:id="@+id/tipPercent"
	    android:progress="10"
	    android:max="50"
	    android:layout_width="fill_parent"
	    android:layout_height="35dp"
	    android:layout_below="@id/labelPercent"/>
	    
</RelativeLayout>
